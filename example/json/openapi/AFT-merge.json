{
  "openapi": "3.0.0",
  "info": {
    "title": "Zhuhai AFT Equipment API",
    "version": "1.0.0",
    "description": "AFT,FATP,Final Test,All Function Test,EOL,station 4,device test,成品测试,全功能测试,终检,终检测试,功能测试,第4个测试,第四工站,终检测试,下线测试"
  },
  "servers": [
    {
      "url": "http://192.168.2.201:8090/v1/zhuhai"
    }
  ],
  "tags": [
    {
      "name": "AFT",
      "description": "AFT设备"
    }
  ],
  "paths": {
    "/AFT1": {
      "post": {
        "tags": [
          "AFT"
        ],
        "summary": "AFT设备开始或结束测试；获取设备状态，结果，数据或进度",
        "description": "AFT(FATP,Final Test,All Function Test,EOL,station 4,device test,成品测试,全功能测试,终检,终检测试,功能测试,第4个测试,第四工站,终检测试,下线测试)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "operation": {
                    "type": "string",
                    "enum": [
                      "start",
                      "stop",
                      "status",
                      "result",
                      "data",
                      "progress"
                    ],
                    "description": "操作类型，可选择start(开始测试)|stop(结束测试)|status(查询状态)|result(查询结果)|data(获取数据)|progress(获取进度)",
                    "example": {
                      "operation": "start"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "操作执行成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "enum": [
                        "IDLE",
                        "Testing"
                      ],
                      "description": "status(设备状态)"
                    },
                    "extra": {
                      "type": "string",
                      "description": "额外说明"
                    },
                    "code": {
                      "type": "integer",
                      "description": "业务状态码"
                    },
                    "result": {
                      "type": "string",
                      "description": "结果"
                    },
                    "message": {
                      "type": "string",
                      "description": "描述信息"
                    },
                    "data": {
                      "type": "string",
                      "description": "详细数据"
                    }
                  }
                },
                "examples": {
                  "successResponse": {
                    "value": {
                      "code": 200,
                      "message": "成功开启测试"
                    }
                  },
                  "statusResponse": {
                    "value": {
                      "status": "Testing",
                      "extra": "正在测试中，请稍后"
                    }
                  },
                  "resultResponse": {
                    "value": {
                      "code": 200,
                      "result": "Pass",
                      "message": "测试通过"
                    }
                  },
                  "dataResponse": {
                    "value": {
                      "code": 200,
                      "data": "32 pcs Pass,0 pcs Fail,Total Test 32 pcs"
                    }
                  },
                  "progressResponse": {
                    "value": {
                      "code": 200,
                      "message": "Process=total 32 steps,currently 50% completed"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}