{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "CRUD API for mock"
  },
  "servers": [
    {
      "url": "http://127.0.0.1:8080/api"
    }
  ],
  "paths": {
    "/count": {
      "get": {
        "summary": "Get storage size.",
        "parameters": [],
        "responses": {
          "200": {
            "description": "Storage Size",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "required": [
                    "count"
                  ],
                  "properties": {
                    "count": {
                      "type": "integer",
                      "format": "int64"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/create": {
      "post": {
        "summary": "Add a new text to storage",
        "parameters": [
          {
            "name": "text",
            "in": "path",
            "required": true,
            "description": "Text should be added",
            "schema": {
              "$ref": "#/components/schemas/Text"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Add successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Id"
                }
              }
            }
          }
        }
      }
    },
    "/read": {
      "post": {
        "summary": "Read text by Id",
        "parameters": [
          {
            "name": "Id",
            "in": "path",
            "required": true,
            "description": "Read text in storage by Id",
            "schema": {
              "$ref": "#/components/schemas/Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Text in storage",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Text"
                }
              }
            }
          }
        }
      }
    },
    "/update": {
      "post": {
        "summary": "Update text in storage by Id",
        "parameters": [
          {
            "name": "update",
            "in": "path",
            "required": true,
            "description": "The update info include text and Id",
            "schema": {
              "$ref": "#/components/schemas/Update"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Update result",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Id"
                }
              }
            }
          }
        }
      }
    },
    "/delete": {
      "post": {
        "summary": "Delete text in storage by Id",
        "parameters": [
          {
            "name": "Id",
            "in": "path",
            "required": true,
            "description": "The Id of the text be deleted",
            "schema": {
              "$ref": "#/components/schemas/Id"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Delete result",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Id"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Count": {
        "type": "object",
        "required": [
          "count"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          }
        }
      },
      "Id": {
        "type": "object",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "integer"
          }
        }
      },
      "Text": {
        "type": "object",
        "required": [
          "text"
        ],
        "properties": {
          "text": {
            "type": "string"
          }
        }
      },
      "Update": {
        "type": "object",
        "required": [
          "id",
          "text"
        ],
        "properties": {
          "id": {
            "type": "integer"
          }
        }
      }
    }
  }
}